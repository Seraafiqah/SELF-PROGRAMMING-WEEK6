package SELFPROGRAMMING;

import java.util.Scanner;

public class ifelsenew {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);

		System.out.println("Enter your subject: "); //print to enter subject
		String sub1 = sc.next();
		
		System.out.println("Enter your subject: "); //print to enter subject
		String sub2 = sc.next();
		
		System.out.println("Enter your mark for Mathematics: "); //print to enter mark
		double mark1 = sc.nextDouble();
		
		System.out.println("Enter your mark for English: "); //print to enter mark
		double mark2 = sc.nextDouble();
		
		{
		if(mark1>50 && mark2>50) //read mark
			System.out.println("PASS for both subject"); //print message
		   else if((mark1 < 50) && (mark2 > 50))
	            
	            System.out.println("PASS for English");
	        
	        else if ((mark1 > 50) && (mark2 < 50))
	            
	            System.out.println("PASS for Mathematics only");
		else
			System.out.println("FAIL for both subject"); //print message
		
		double average=(mark1+mark2)/2;
		char grade;
				
		{
				if((average>=80) && (average<=100))
					grade = 'A';
					else if ((average>=60) && (average<=79))
					grade = 'B';	
					else if ((average>=50) && (average<=59)) 
						grade = 'C';	
					else 
						grade = 'F';	
				System.out.println("Average mark " + average);	
				System.out.println("Grade: " + grade);
				}
		
		
		if(mark1>mark2)
			System.out.println("Mathematics's mark is greater than English's mark."); //print message
		else	
			System.out.println("English's mark is greater than Mathematics's mark."); //print message
	}

}

	}
